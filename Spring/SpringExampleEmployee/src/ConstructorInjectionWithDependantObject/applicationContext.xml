<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
      
    <bean id="addressid" class="constructor_injection_with_dependent_object.Address">
        <constructor-arg value="bhadrawati"></constructor-arg>
        <constructor-arg value="Maharashtra"></constructor-arg>
        <constructor-arg value="India"></constructor-arg>
    </bean>
    
    <bean id="studid" class="constructor_injection_with_dependent_object.Student">
        <constructor-arg value="100" type="int"></constructor-arg>
          <constructor-arg value="sparsh"></constructor-arg>
          <constructor-arg refbean="addressid"></constructor-arg>
    </bean>
    
</beans>